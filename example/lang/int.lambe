import char
import algebraic

kind int = type

impl int {
    sig (+) : self -> self -> self
    sig (-) : self -> self -> self
    sig (/) : self -> self -> self
    sig (*) : self -> self -> self
    sig abs    : self -> self
}

trait Extension for int {
    sig (--) : self -> self
    def (--) = self - 1

    sig (++) : self -> self
    def (++) = self + 1
}

impl SemiGroup int {
    def compose = self +
}

impl Monoid int {
    def neutral = 0
}
